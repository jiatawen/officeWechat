/* pages/companySetting/userSetting/userSetting.wxss */
/* 页面容器 */
.page-container {
  height: 100vh;
  background: #f5f6fa;
}

/* 滚动容器优化 */
.scroll-container {
  padding: 20rpx 30rpx;
}
 
/* 栏目项高级样式 */
.column-item {
  margin-bottom: 5px;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
  transition: all 0.3s ease;
}
 
/* 交互优化 */
.column-item:active {
  transform: scale(0.98);
  opacity: 0.9;
}
 
/* 内容容器布局 */
.content-box {
  padding: 32rpx;
  display: flex;
  align-items: center;
}
 
.column-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 24rpx;
}
 
.column-title {
  font-size: 32rpx;
  color: #2d3436;
  font-weight: 500;
}
.form-item {
  display: flex;
  align-items: center;
  min-height: 96rpx;  /* 保持触控区域规范 */
  padding: 24rpx 32rpx;  /* 垂直间距减少25% */
  line-height: 1.3;  /* 从1.5降为专业阅读比例 */
  margin-bottom: 24rpx;
  background: var(--item-bg, #ffffff);
  border-radius: 12rpx;
  transition: background-color 0.2s;
}

.picker-content {
  display: flex;
  align-items: center;
  gap: 24rpx;
  line-height: 1.2;  /* 子项独立行高 */
  height: 30px;
  margin-left: 130px;
}

.column-time picker:not(:last-child){
  margin-bottom: -30px;
}
.text_input{
  margin: 17px;
  margin-top: -30px;
  height: 150px;
  width: 90%;
}

.sub_btn{
  background-color: #3875c6;
  color: #ffffff;
}

.sub_btn:active{
  background-color: rgba(56, 117, 198, 0.9);
}




.page-container {
  padding: 30rpx;
  background: #f5f6fa;
}
 
/* 输入框样式 */
.input-content {
  flex: 1;
  text-align: right;
  padding-right: 20rpx;
  color: #333;
}
 
/* 时间设置特殊布局 */
.time-settings .form-item {
  padding: 32rpx 30rpx;
}
 
/* 开关控件样式 */
.switch-control {
  transform: scale(0.8);
  position: absolute;
  right: 30rpx;
}
 
/* 下拉菜单优化 */
.picker-content {
  min-width: 200rpx;
  justify-content: flex-end;
}
 
/* 提交按钮容器 */
.submit-container {
  margin-top: 60rpx;
  padding: 0 20%;
}