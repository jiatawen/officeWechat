/* profile-edit.wxss  */
.container {
  padding: 16rpx 24rpx;
  background-color: var(--page-bg, #f5f5f5);
}
 
.form-item {
  display: flex;
  align-items: center;
  min-height: 96rpx;  /* 保持触控区域规范 */
  padding: 24rpx 32rpx;  /* 垂直间距减少25% */
  line-height: 1.3;  /* 从1.5降为专业阅读比例 */
  margin-bottom: 24rpx;
  background: var(--item-bg, #ffffff);
  border-radius: 12rpx;
  transition: background-color 0.2s;
}

.picker-content {
  display: flex;
  align-items: center;
  gap: 24rpx;
  line-height: 1.2;  /* 子项独立行高 */
  height: 30px;
}
 
.label {
  flex: 0 0 160rpx;
  font-size: 30rpx;
  color: var(--text-primary, #333);
  line-height: 1.3em;  /* 精确单位控制 */
  padding: 8rpx 0;  /* 补偿行高缩减 */
}
 
input, textarea {
  flex: 1;
  font-size: 30rpx;
  color: var(--text-primary, #333);
  min-height: 48rpx;
  padding: 8rpx 0;
}
 
/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  :root {
    --page-bg: #1a1a1a;
    --item-bg: #2d2d2d;
    --text-primary: #e6e6e6;
  }
}
 
.submit-btn{
  background-color: #3875c6;
  color: white;
  height: 55px;
  line-height: 40px;
  border-radius: 5px;
}

.submit-btn:active {
  background-color: rgba(56, 117, 198, 0.7);
}

.submit-btn{
  margin-top: 170px;
  margin-bottom: 20px;
}